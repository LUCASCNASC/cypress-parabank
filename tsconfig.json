// tsconfig.json (ou cypress/tsconfig.json)
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // Garanta que `types` inclua `cypress`
    "types": ["cypress", "node"] 
  },
  "include": ["**/*.ts"]
}